{
  "name": "secure-mesh-cli",
  "version": "1.0.0",
  "description": "Offline mesh network simulation CLI for security research and demonstration",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "docs:generate": "jsdoc -c jsdoc.json",
    "build": "node scripts/build.js"
  },
  "keywords": [
    "security",
    "mesh-network",
    "cryptography",
    "cli",
    "simulation",
    "penetration-testing",
    "security-research"
  ],
  "author": "Benjamin Morin",
  "license": "MIT",
  "dependencies": {
    "crypto": "^1.0.1",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "table": "^6.8.1",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "node-forge": "^1.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jsdoc": "^4.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/secure-mesh-cli.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/secure-mesh-cli/issues"
  },
  "homepage": "https://github.com/yourusername/secure-mesh-cli#readme"
}
